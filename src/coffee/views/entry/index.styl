.entry
	height 100%
	
	.current-annotation
		display none
		position absolute
		border 1px solid
		border-radius 3px
		padding 4px
		background-color white
		max-width 300px
		z-index 999

	article
		height 100%

		.metadata
			width 100px
			position absolute
			left 1%
			z-index 3

			button
				margin-bottom -1px

			.table-container
				display none
				overflow-y auto
				overflow-x hidden
				position absolute

				table
					line-height 24px
					border 1px solid #CCC
					background white

					tr:first-child
						td
							border none

					td
						padding-left 8px
						border-top 1px solid #EEE
						overflow ellipsis
						vertical-align top

						&:first-child
							white-space nowrap
							color #888

						&:last-child
							padding-right 20px
							min-width 300px
							color black
		
		h2
			color #666
			text-align center
			font-size 1.3em
			margin 1.5em
			max-width 60%
			margin-left 20%
			
			span.link
				color black
				cursor pointer
				
				&:hover
					text-decoration underline
					
		.container
			height calc(100% - 344px)
			overflow-y scroll
			position relative
			padding 1% 1%
			
			.facsimile, .text, .facsimile-thumbs
				inline-block()
				
			.facsimile
				width 40%
				height calc(100% - 344px)
				position fixed
				
				iframe
					width 100%
					height 100%
					border none
					
			.text
				max-width 720px
				left 42%
				width 48%
				position relative
				counter-reset section
				margin-bottom 100px
				
				.set-facsimile
					svg
						width 12px
						height 12px
						margin 0 6px
						cursor pointer

				figure
					display inline
					position absolute
					right -80px
					cursor pointer
					margin 0
					max-width 60px
					padding-bottom 20px
					
					img
						max-width 60px
						max-height 60px

					figcaption					
						overflow-x hidden
						text-overflow ellipsis
						white-space nowrap
						font-size 0.75em
						line-height initial
						color #888

				.line
					// font-family "Junicode", serif;
					line-height 28px
					counter-increment section
					position relative
					padding-left 8px
					min-height 28px
										


			.facsimile-thumbs
				width 10%