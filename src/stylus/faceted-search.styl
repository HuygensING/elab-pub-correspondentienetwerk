.controls
	position relative
	min-height 40px
	a.annotations-index
		position absolute
		right 0
		top 0
		display inline-block
		text-align right
		line-height 30px

	button.reset
		control-button()
		color white
		position absolute
		margin-top 0
		left 0
		top 0

.faceted-search
	&:before // the huygens slant
		width 0
		height 0
		content ""
		display block
		border-bottom 20px solid #f1f1f1
		border-left 0 solid transparent
		border-right 0 solid transparent
		margin-top -20px

	.row .cell
		font-size .8rem

	form button
		background turquoise
		color white
		box-shadow none
		border-radius 2px
		&:hover
			background lighten(controlsButtonColor, 10%)
		&:active
			background darken(controlsButtonColor, 10%)

	.options
		input, label
			vertical-align middle
			cursor pointer
		label
			margin-left .5em

		.align.middle
			font-size small // is 0 for .row
			line-height normal
			padding-bottom 1em

		h4
			margin-bottom .5em
		ul
			margin-bottom 1em
			&:last-child
				margin-bottom 0

	.controls
		.facet
			background white
			border none

		button
			width auto
			margin-bottom 1em

	.facet 
		header h3
			font-size 16px
		.options ul
			padding-left 0
			li label, li input
				cursor pointer
