@import '../import/*'

@media screen
	div.entry
		font-family sans-serif
		font-size 11pt

		h3, h5
			font-weight normal
			font-family sans-serif
			color mediumGrey

		h3
			font-size 11pt
		h5
			font-size 9pt

		p.no-data
			color mediumGrey
			font-family sans-serif
			font-size 24px;
			margin 2em 0 0 0
			text-align center
			min-height 4em

		.padder
			margin-left pTop
			border-top 1px solid lightGrey
			padding-top pTop

			&.no-border
				border none

		button-padding = pTop 0 (pTop + 10) 0

		.text
			.line
				sup[data-marker]
					color #ff42ff
					cursor pointer
					font-style normal
					margin 0 5px 0 2px
