highlightColor = lighten(annotationsBackground, 40%)
numberHighlight = #BA5DB6

.text
	@media print
		width auto

	sup[data-marker]
		cursor pointer
		color darken(annotationsBackground, 30%)
		margin-right 5px
		&:hover
			color black
			background-color highlightColor
	span.highlight
		display inline
		background-color highlightColor

.annotations
	@media print
		width auto

	li
		&.highlight .number span
			color white
			background-color numberHighlight
		&:hover
			cursor pointer
	.number span
		background-color lightGrey
		color mediumGrey
		padding 0 2px
		border-radius 2px
		float left
	.type
		font-weight bold
		padding-left 1.5em
		margin-bottom .5em
		height 1em
	.head
		min-height 1.5em
		clear both



	li:hover .number span
		background-color numberHighlight
		color white
