a
	color sky-blue
	text-decoration none
	font-family sans-serif
	font-size 10pt

button
	background-color light-grey
	border-radius 4px
	border none
	color darken(medium-grey, 30%)
	font-size 9pt
	cursor pointer
	line-height 19px
	padding 0 5px

	&:hover
		background-color darken(light-grey, 10%)

	&.active
		background-color medium-grey
		color white
		&:hover
			background-color lighten(medium-grey, 10%)

	&.green
		background-color turquoise
		color black
		&:hover
			background-color lighten(turquoise, 10%)

h1
	font-family Samba
	font-weight normal
	color #B325A0

footer
	border-top 1px solid medium-grey
	padding-top 20px
	color light-grey
	font-family sans-serif
	font-size 9pt

.header
	border-bottom 2px solid medium-grey
	margin-bottom 25px

	.other
		a
			margin 0 20px

	.huygens-logo
		text-align right
		img
			display inline-block
			margin-bottom 10px

.item
	font-family sans-serif
	font-size 11pt

	h3, h5
		font-weight normal
		font-family sans-serif
		color medium-grey
		
	h3
		font-size 11pt
	h5
		font-size 9pt

	.padder
		margin-left pTop
		border-top 1px solid light-grey
		padding-top pTop

		&.no-border
			border none

	.metadata
		padding-top pTop
		ul
			list-style none
			margin 0
			padding 0
			li
				float left
				padding-bottom pTop
				border-bottom 1px solid light-grey
				width 50%

				h5
					margin .8em 0 0 0

		.cell.more
			.padder
				position relative
				height 100%
				button
					// position absolute
					bottom 15px
					left 0
	.contents
		ul
			list-style none
			margin 0
			padding 0
			padding-top pTop
			text-align right
			li
				display inline-block
	
	.annotations
		color medium-grey
		font-size 9pt