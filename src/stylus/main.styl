body > header
	padding 0 20px 30px 20px
	position relative
	z-index 2
	background-color white
	box-sizing border-box

	h1
		text-decoration none
		font-size 3em
		margin 10px 0 5px 0

		a
			font-family Samba
			font-weight normal
			color #B325A0

	img
		position absolute
		right 20px
		top 5px

	ul
		list-style none
		margin 0
		padding 0
		font-size 14px

		li
			display inline-block
			margin-right 10px
			
			a
				padding 3px 6px

				&:hover, &.active
					border-radius 2px
					color white
					background-color #6CA1E5

				small
					font-size 11px

