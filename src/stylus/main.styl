html
	overflow-y scroll

body
	font-family sans-serif
	margin 0
	padding 0

a
	color sky-blue
	text-decoration none
	font-family sans-serif
	// font-size 10pt

button, a.button
	background-color light-grey
	border-radius 4px
	border none
	color darken(medium-grey, 30%)
	font-size 9pt
	cursor pointer
	line-height 19px
	padding 0 5px

	&:hover
		background-color darken(light-grey, 10%)

	&.active
		background-color medium-grey
		color white
		&:hover
			background-color lighten(medium-grey, 10%)

	&.green
		background-color turquoise
		color black
		&:hover
			background-color lighten(turquoise, 10%)

h1, header h1 a
	font-family Samba
	font-weight normal
	color #B325A0
	text-decoration none

.page-header
	padding-top 1em
	h1
		float left

	.huygens-logo
		display inline-block
		float right
		margin-bottom 10px
		background-image url(../images/HuygensING.png)
		width 92px
		height 66px

	&:after
		content ""
		clear both
		display block
		margin-bottom 2em

.page-footer
	border-top 1px solid medium-grey
	padding 20px 0
	margin-top 50px
	color light-grey
	font-family sans-serif
	font-size 9pt