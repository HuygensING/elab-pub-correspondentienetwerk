easeOutQuint()
	-webkit-transition: all 600ms cubic-bezier(0.23, 1, 0.32, 1);
	transition:         all 600ms cubic-bezier(0.23, 1, 0.32, 1);

vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

border-radius()
	vendor('border-radius', arguments)

background-image()
	vendor('background-image', arguments)

clear-fix()
	&:before, &:after
		clear both
		content ""
		display block
		visibility hidden
		line-height 0
		height 0

no-padding-margin()
	padding 0
	margin 0

button()
	box-sizing border-box
	background-color lightGrey
	border-radius 4px
	border none
	color darken(mediumGrey, 30%)
	font-size 9pt
	cursor pointer
	line-height 19px
	padding 0 5px

	&:hover
		background-color darken(lightGrey, 10%)

	&.active
		background-color mediumGrey
		color white
		&:hover
			background-color lighten(mediumGrey, 10%)

big-button()
	button()
	padding 10px 15px
	box-shadow 1px 1px 1px #ccc

.not-visible
	visibility hidden
	opacity 0

.hidden
	display none