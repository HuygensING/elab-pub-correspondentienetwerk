.panel
	position relative
	display inline-block
	min-width 400px
	max-width 400px
	box-sizing border-box
	border 1px solid light-grey
	border-left none
	padding 40px

	&:first-child
		border-left 1px solid light-grey


	/*
    Dragging
	*/

	&.ui-draggable-dragging
		// transform rotate(45deg)
		-webkit-transform rotate(5deg)

	.view
		.text
			display inline-block
			width 205px
			margin-right 15px
		.annotations
			display inline-block
			width 50px


	/*** Selection tab ***/

	.selection
		position absolute
		display inline-block
		top 0px
		left 0px
		margin 0 auto
		padding 0 5px

		background light-grey
		font-family sans-serif
		font-size 13px

		cursor pointer

		border-radius 4px
		border-bottom-left-radius 0
		border-bottom-right-radius 0
		border-bottom 0px solid transparent
		border 1px solid darken(light-grey, 20%)

		&:hover
			background lighten(light-grey, 20%)
			ul
				display inline-block

		ul
			padding 0 0
			margin 0
			list-style none
			display none
			li
				margin 5px 0