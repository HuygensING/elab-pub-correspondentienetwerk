@import '../import/*'

.faceted-search-results
	top 112px
	bottom 35px

	.faceted-search
		.text-search
			input
				&:focus
					outline none
					border-color rgba(defaultPurple, 0.25)
					box-shadow 0 0 3px rgba(defaultPurple, 0.25)

				&:focus + i.fa-search
					box-shadow 0 0 3px rgba(defaultPurple, 0.25)
				
			i.fa-search
				background defaultPurple